generator client {
  provider = "prisma-client-js"
}

generator fieldEncryptionMigrations {
  provider = "prisma-field-encryption"
  output   = "./migrations"
}

datasource db {
  provider          = "postgresql"
  url               = env("SUPABASE_DB_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model vaults {
  name            String
  description     String?
  created_at      DateTime          @default(now()) @db.Timestamptz(6)
  updated_at      DateTime          @default(now()) @updatedAt @db.Timestamptz(6)
  owner_id        String            @db.Uuid
  id              String            @id @default(uuid()) @db.Uuid
  expenses        expenses[]
  income          income[]
  investments     investments[]
  subscriptions   subscriptions[]
  vault_members   vault_members[]
  accounts        accounts[]
  members         members[]
  tax_pnl_uploads tax_pnl_uploads[]
  owner           users             @relation("VaultOwner", fields: [owner_id], references: [id], onDelete: Cascade)
}

model vault_members {
  vault_id   String   @db.Uuid
  user_id    String   @db.Uuid
  permission String   @default("read")
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  id         String   @id @default(uuid()) @db.Uuid
  user       users    @relation("VaultMember", fields: [user_id], references: [id], onDelete: Cascade)
  vault      vaults   @relation(fields: [vault_id], references: [id], onDelete: Cascade)

  @@unique([vault_id, user_id])
}

model subscriptions {
  id           String    @id @default(uuid())
  /// @encrypted
  name         String
  /// @encrypted
  notes        String?
  url          String
  /// @encrypted
  price        String    @default("0")
  paid         String
  notify       Boolean   @default(false)
  date         String
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  active       Boolean?  @default(true)
  cancelled_at String?
  nameHash     String?
  vault_id     String    @db.Uuid
  account_id   String?   @db.Uuid
  member_id    String?   @db.Uuid
  vault        vaults    @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  account      accounts? @relation(fields: [account_id], references: [id], onDelete: SetNull)
  member       members?  @relation(fields: [member_id], references: [id], onDelete: SetNull)
}

model expenses {
  id         String    @id @default(uuid())
  /// @encrypted
  name       String
  /// @encrypted
  notes      String?
  /// @encrypted
  price      String    @default("0")
  paid_via   String    @default("")
  category   String
  date       String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  nameHash   String?
  vault_id   String    @db.Uuid
  account_id String?   @db.Uuid
  member_id  String?   @db.Uuid
  vault      vaults    @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  account    accounts? @relation(fields: [account_id], references: [id], onDelete: SetNull)
  member     members?  @relation(fields: [member_id], references: [id], onDelete: SetNull)
}

model income {
  id         String    @id @default(uuid())
  /// @encrypted
  name       String
  /// @encrypted
  notes      String?
  /// @encrypted
  price      String    @default("0")
  category   String
  date       String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  nameHash   String?
  vault_id   String    @db.Uuid
  account_id String?   @db.Uuid
  member_id  String?   @db.Uuid
  vault      vaults    @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  account    accounts? @relation(fields: [account_id], references: [id], onDelete: SetNull)
  member     members?  @relation(fields: [member_id], references: [id], onDelete: SetNull)
}

model investments {
  id         String    @id @default(uuid())
  /// @encrypted
  name       String
  /// @encrypted
  notes      String?
  /// @encrypted
  price      String    @default("0")
  /// @encrypted
  units      String    @default("0")
  category   String
  date       String
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @default(now()) @updatedAt @db.Timestamptz(6)
  nameHash   String?
  vault_id   String    @db.Uuid
  account_id String?   @db.Uuid
  member_id  String?   @db.Uuid
  vault      vaults    @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  account    accounts? @relation(fields: [account_id], references: [id], onDelete: SetNull)
  member     members?  @relation(fields: [member_id], references: [id], onDelete: SetNull)
}

model users {
  id                         String          @id @db.Uuid
  email                      String          @unique
  created_at                 DateTime        @default(now()) @db.Timestamptz(6)
  updated_at                 DateTime        @default(now()) @updatedAt @db.Timestamptz(6)
  currency                   String          @default("INR")
  locale                     String          @default("en")
  order_identifier           String?
  order_store_id             String?
  order_number               String?
  order_status               String?
  billing_start_date         String?
  plan_status                String          @default("basic")
  trial_start_date           DateTime        @default(now()) @db.Timestamptz(6)
  usage                      Int             @default(0)
  basic_usage_limit_email    Boolean         @default(false)
  new_signup_email           Boolean         @default(false)
  premium_plan_expired_email Boolean         @default(false)
  premium_usage_limit_email  Boolean         @default(false)
  monthly_email_report       Boolean         @default(false)
  color_scheme               String          @default("default")
  logo_url                   String?
  vault_members              vault_members[] @relation("VaultMember")
  owned_vaults               vaults[]        @relation("VaultOwner")
}

model accounts {
  id               String          @id @default(uuid()) @db.Uuid
  /// @encrypted
  name             String
  type             String
  /// @encrypted
  starting_balance String          @default("0")
  /// @encrypted
  notes            String?
  active           Boolean         @default(true)
  created_at       DateTime        @default(now()) @db.Timestamptz(6)
  updated_at       DateTime        @default(now()) @updatedAt @db.Timestamptz(6)
  vault_id         String          @db.Uuid
  member_id        String?         @db.Uuid
  vault            vaults          @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  member           members?        @relation(fields: [member_id], references: [id], onDelete: SetNull)
  expenses         expenses[]
  income           income[]
  subscriptions    subscriptions[]
  investments      investments[]

  @@index([vault_id])
  @@index([member_id])
}

model members {
  id            String          @id @default(uuid()) @db.Uuid
  /// @encrypted
  name          String
  /// @encrypted
  notes         String?
  active        Boolean         @default(true)
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  updated_at    DateTime        @default(now()) @updatedAt @db.Timestamptz(6)
  vault_id      String          @db.Uuid
  vault         vaults          @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  accounts      accounts[]
  expenses      expenses[]
  income        income[]
  subscriptions subscriptions[]
  investments   investments[]

  @@index([vault_id])
}

model contact {
  id         Int      @id @default(autoincrement())
  message    String
  subject    String
  email      String
  created_at DateTime @default(now()) @db.Timestamptz(6)
  name       String?
}

model tax_pnl_uploads {
  id          String             @id @default(uuid()) @db.Uuid
  vault_id    String             @db.Uuid
  provider    String
  file_name   String
  uploaded_at DateTime           @default(now()) @db.Timestamptz(6)
  created_at  DateTime           @default(now()) @db.Timestamptz(6)
  updated_at  DateTime           @default(now()) @updatedAt @db.Timestamptz(6)
  vault       vaults             @relation(fields: [vault_id], references: [id], onDelete: Cascade)
  holdings    tax_pnl_holdings[]

  @@index([vault_id])
}

model tax_pnl_holdings {
  id                  String          @id @default(uuid()) @db.Uuid
  upload_id           String          @db.Uuid
  /// @encrypted
  symbol              String
  /// @encrypted
  quantity            String          @default("0")
  /// @encrypted
  quantity_long_term  String          @default("0")
  /// @encrypted
  average_price       String          @default("0")
  /// @encrypted
  current_price       String          @default("0")
  purchase_date       String
  /// @encrypted
  pnl                 String          @default("0")
  /// @encrypted
  pnl_percentage      String          @default("0")
  holding_period_days Int
  is_long_term        Boolean         @default(false)
  created_at          DateTime        @default(now()) @db.Timestamptz(6)
  updated_at          DateTime        @default(now()) @updatedAt @db.Timestamptz(6)
  upload              tax_pnl_uploads @relation(fields: [upload_id], references: [id], onDelete: Cascade)

  @@index([upload_id])
  @@index([is_long_term])
}
